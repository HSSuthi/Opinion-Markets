    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.15.11",
    "@swc/helpers": "^0.5.18",
    "@types/cors": "^2.8.17",
