generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Market {
  id          String    @id @default(uuid())
  statement   String
  duration    Int
  creator     String
  signature   String
  createdAt   DateTime  @default(now())
  opinions    Opinion[]
}

model Opinion {
  id           String   @id @default(uuid())
  staker       String
  amount       BigInt
  opinion_text String
  signature    String
  marketId     String
  market       Market   @relation(fields: [marketId], references: [id])
}