# ═══════════════════════════════════════════════════════════════════════════
# Opinion Markets - Environment Configuration Template
#
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (add to .gitignore)
#
# ═══════════════════════════════════════════════════════════════════════════

# ─── APPLICATION ────────────────────────────────────────────────────────────

NODE_ENV=development
DEBUG_SQL=false

# ─── API SERVER ─────────────────────────────────────────────────────────────

PORT=3001
CORS_ORIGIN=*

# ─── DATABASE (PostgreSQL) ──────────────────────────────────────────────────
# Format: postgres://user:password@host:port/database

DATABASE_URL="postgresql://localhost:5432/opinion_markets"

# Postgres connection options
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=opinion_markets

# ─── REDIS (Caching & Job Queue) ────────────────────────────────────────────

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ─── SOLANA ─────────────────────────────────────────────────────────────────

# Solana network: devnet, testnet, mainnet-beta
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Opinion Markets Program ID
PROGRAM_ID=2NaUpg4jEZVGDBmmuKYLdsAfSGKwHxjghhfgVpQvZJYu

# Oracle private key (base64 or JSON format) - for signing transactions
ORACLE_PRIVATE_KEY=

# ─── ORACLE (Off-Chain Service) ─────────────────────────────────────────────

# Claude API key for sentiment analysis
CLAUDE_API_KEY=

# IPFS/Arweave configuration (for opinion text storage)
IPFS_GATEWAY_URL=https://gateway.pinata.cloud
ARWEAVE_NODE_URL=https://arweave.net

# ─── FRONTEND ───────────────────────────────────────────────────────────────

NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_PROGRAM_ID=2NaUpg4jEZVGDBmmuKYLdsAfSGKwHxjghhfgVpQvZJYu
NEXT_PUBLIC_NETWORK=devnet

# ─── LOGGING ────────────────────────────────────────────────────────────────

LOG_LEVEL=info

# ─── DEPLOYMENT ────────────────────────────────────────────────────────────

# For Vercel frontend
VERCEL_URL=

# For Docker/containers
DOCKER_REGISTRY=

# ─── OPTIONAL: MONITORING & ANALYTICS ──────────────────────────────────────

SENTRY_DSN=
DATADOG_API_KEY=
